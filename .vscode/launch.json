{
    /* Use IntelliSense to learn about possible attributes. */
    /* Hover to view descriptions of existing attributes. */
    /* For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387 */

    /* 运行前请确保当前活跃文件为所期望运行的.c文件 */

    "version": "0.2.0",
    "configurations": [
        {
            "name": "(linux)(gdb) source code",                                 /* 任务名称 */
            "type": "cppdbg",                                                   /* 调试器类型 */
            "request": "launch",                                                /* 请求类型 */
            "program": "${fileDirname}/${fileBasenameNoExtension}",             /* 指定运行文件 */
            "args": [],                                                         /* 运行参数 */
            "stopAtEntry": true,                                                /* 运行后是否停在入口处 */
            "cwd": "${fileDirname}",                                            /* 指定工作目录 */
            "environment": [],                                                  /* 环境变量 */
            "externalConsole": false,                                           /* 是否使用外部控制台 */
            "MIMode": "gdb",                                                    /* 调试器类型 */
            "preLaunchTask": "(Linux) Build",                                   /* 运行前执行的任务 */
            "miDebuggerPath": "/usr/bin/gdb",                                   /* 将此处修改为本地 gdb 地址*/
            "setupCommands": [                                                  /* 额外的调试器命令 */
                {
                    "description": "Enable pretty-printing for gdb",                /* 命令描述 */
                    "text": "-enable-pretty-printing",                              /* 命令内容 */
                    "ignoreFailures": true                                          /* 忽略失败 */
                }
            ]
        },
        {
            "name": "(windows)(gdb) source code",                               /* 任务名称 */
            "type": "cppdbg",                                                   /* 调试器类型 */
            "request": "launch",                                                /* 请求类型 */
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",         /* 指定运行文件 */
            "args": [],                                                         /* 运行参数 */
            "stopAtEntry": true,                                                /* 运行后是否停在入口处 */
            "cwd": "${fileDirname}",                                            /* 指定工作目录 */
            "environment": [],                                                  /* 环境变量 */
            "externalConsole": false,                                           /* 是否使用外部控制台 */
            "MIMode": "gdb",                                                    /* 调试器类型 */
            "preLaunchTask": "(Windows) Build",                                 /* 运行前执行的任务 */
            "miDebuggerPath": "D:/Developments/msys64/mingw64/bin/gdb.exe",     /* 将此处修改为本地 gdb.exe 地址 */
            "setupCommands": [                                                  /* 额外的调试器命令 */
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
