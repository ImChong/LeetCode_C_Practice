{
	"version": "2.0.0",
	"tasks": [
		/* 运行前请确保当前活跃文件为所期望运行的.c文件 */

		/* Build：编译当前活跃文件 */
		{
			"label": "Build",											/* 任务名称 */
			"command": "/usr/bin/gcc",									/* 将此处修改为本地 gcc 地址*/
			"args": [
				"-fdiagnostics-color=always",							/* 使gcc输出带颜色 */
				"-I${workspaceFolder}/00_Basics/01_Common_Func/inc/",	/* 常用头文件路径 */
				"-I${fileDirname}",										/* 当前活跃文件所在目录 */
				"-I${fileDirname}/inc",									/* 当前活跃文件的头文件所在目录 */
				"-g",													/* 生成调试信息 */
				"*.c",													/* 将当前目录下所有.c文件同步编译 */
				"-o",													/* 指定输出文件名 */
				"${fileDirname}/main"									/* 输出文件位置及文件名 */
			],
			"options": {
				"cwd": "${fileDirname}"									/* 指定工作目录 */
			},
			"problemMatcher": [
				"$gcc"													/* 指定错误匹配模式 */
			],
			"group": "build",											/* 将此处注释将次任务组设置为默认F5任务 */
			"detail": "编译当前活跃文件",									 /* 任务描述 */
			"linux": {
                "command": "/usr/bin/gcc",
                "args": [
					"-fdiagnostics-color=always",							/* 使gcc输出带颜色 */
					"-I${workspaceFolder}/00_Basics/01_Common_Func/inc/",	/* 常用头文件路径 */
					"-I${fileDirname}",										/* 当前活跃文件所在目录 */
					"-I${fileDirname}/inc",									/* 当前活跃文件的头文件所在目录 */
					"-g",													/* 生成调试信息 */
					"*.c",													/* 将当前目录下所有.c文件同步编译 */
					"-o",													/* 指定输出文件名 */
					"${fileDirname}/main"									/* 输出文件位置及文件名 */
				]
            },
            "windows": {
                "command": "D:/Developments/msys64/mingw64/bin/gcc.exe",
                "args": [
					"-fdiagnostics-color=always",							/* 使gcc输出带颜色 */
					"-I${workspaceFolder}/00_Basics/01_Common_Func/inc/",	/* 常用头文件路径 */
					"-I${fileDirname}",										/* 当前活跃文件所在目录 */
					"-I${fileDirname}/inc",									/* 当前活跃文件的头文件所在目录 */
					"-g",													/* 生成调试信息 */
					// "${fileDirname}/solutionFunc.c",						/* 将 solutionFunc.c 同步编译 */
					// "${file}",											/* 将当前活跃文件同步编译 */
					"*.c",													/* 将当前目录下所有.c文件同步编译 */
					"-o",													/* 指定输出文件名 */
					"${fileDirname}/main.exe"								/* "${fileDirname}/${fileBasenameNoExtension}.exe" */
				]
            }
		},
		/* Run：运行当前活跃文件 */
		{
			"label": "Run",										/* 任务名称 */
			"command": "${fileDirname}/main",							/* 指定运行文件 */
			"options": {
				"cwd": "${fileDirname}"									/* 指定工作目录 */
			},
			"detail": "运行当前活跃文件",									 /* 任务描述 */
			"linux": {
				"command": "${fileDirname}/main",
			},
			"windows": {
				"command": "${fileDirname}/main.exe"
			}
		},
		/* Build & Run：编译并运行当前活跃文件 */
		{
            "label": "Build & Run",										/* 任务名称 */
            "dependsOrder": "sequence",									/* 依赖顺序 */
            "dependsOn": [
                "Build",
                "Run"
            ],
            "detail": "编译并运行当前活跃文件"							  /* 任务描述 */
        }
	]
}
