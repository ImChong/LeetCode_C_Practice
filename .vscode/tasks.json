{
	"version": "2.0.0",
	"tasks": [
		/* 运行前请确保当前活跃文件为所期望运行的.c文件 */

		/* linux System Tasks */
		{
			"type": "cppbuild",
			"label": "(Linux) Build",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-I${workspaceFolder}/00_Basics/02_Common_Header/",
				"-I${fileDirname}",
				"-I${fileDirname}/inc",
				"-g",
				"*.c",
				"-o",
				"${fileDirname}/main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "构建目标程序"
		},
		{
			"label": "(Linux) Run",
			"command": "${fileDirname}/main",
			"detail": "运行目标程序"
		},
		{
            "label": "(Linux) Build & Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "(Linux) Build",
                "(Linux) Run"
            ],
			// "group": {					/* 取消该处注释将次任务组设置为默认F5任务 */
			// 	"kind": "build",
			// 	"isDefault": true
			// },
            "detail": "执行构建并运行目标程序"
        },

		/* Windows System Tasks */
		{
			"label": "(Windows) Build",
			"command": "D:/Developments/msys64/mingw64/bin/gcc.exe",	/* 将此处修改为本地 gcc.exe 地址*/
			"args": [
				"-fdiagnostics-color=always",
				"-I${workspaceFolder}/00_Basics/02_Common_Header/",
				"-I${fileDirname}",
				"-I${fileDirname}/inc",
				"-g",
				// "${fileDirname}/solutionFunc.c",						/* 将 solutionFunc.c 同步编译 */
				// "${file}",											/* 将当前活跃文件同步编译 */
				"*.c",													/* 将当前目录下所有.c文件同步编译 */
				"-o",
				"${fileDirname}/main.exe"								/* "${fileDirname}/${fileBasenameNoExtension}.exe" */
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "构建目标程序"
		},
		{
			"label": "(Windows) Run",
			"command": "${fileDirname}/main.exe",
			"detail": "运行目标程序"
		},
		{
            "label": "(Windows) Build & Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "(Windows) Build",
                "(Windows) Run"
            ],
			// "group": {					/* 取消该处注释将次任务组设置为默认F5任务 */
			// 	"kind": "build",
			// 	"isDefault": true
			// },
            "detail": "执行构建并运行目标程序"
        },
	]
}
