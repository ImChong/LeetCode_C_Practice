{
    "C_Cpp.default.compilerPath": "",                                                   /* 初始化参数 */
    "windows": {	/* Windows下的指令 */
        "C_Cpp.default.compilerPath": "D:/Developments/msys64/mingw64/bin/gcc.exe"      /* 将此处修改为本地 gcc.exe 地址*/
    },
    "linux": {		/* Linux下的指令 */
        "C_Cpp.default.compilerPath": "/usr/bin/gcc"                                    /* 将此处修改为本地 gcc 地址*/
    },
    "code-runner.executorMap": {
        "c": "cd $dir && if exist src/ (gcc -I$workspaceRoot/00_Basics/01_Common_Func/inc/ -I$workspaceRoot/00_Basics/01_Common_Func/inc/commonDef/ -I$dirWithoutTrailingSlash/cfg/ -I$dirWithoutTrailingSlash/inc/ $workspaceRoot/00_Basics/01_Common_Func/src/*.c $dirWithoutTrailingSlash/src/*.c main.c -o main.exe && $dirmain.exe) else (gcc -I$workspaceRoot/00_Basics/01_Common_Func/inc/ -I$workspaceRoot/00_Basics/01_Common_Func/inc/commonDef/ -I$dirWithoutTrailingSlash/cfg/ $workspaceRoot/00_Basics/01_Common_Func/src/*.c main.c -o main.exe && $dirmain.exe)"
        /*
            cd $dir
            &&
            if exist src/
                (gcc
                    -I$workspaceRoot/00_Basics/01_Common_Func/inc/
                    -I$workspaceRoot/00_Basics/01_Common_Func/inc/commonDef/
                    -I$dirWithoutTrailingSlash/cfg/
                    -I$dirWithoutTrailingSlash/inc/
                    $workspaceRoot/00_Basics/01_Common_Func/src/*.c
                    $dirWithoutTrailingSlash/src/*.c
                    main.c
                    -o
                    main.exe
                    &&
                    $dirmain.exe
                )
            else
                (gcc
                    -I$workspaceRoot/00_Basics/01_Common_Func/inc/
                    -I$workspaceRoot/00_Basics/01_Common_Func/inc/commonDef/
                    -I$dirWithoutTrailingSlash/cfg/
                    $workspaceRoot/00_Basics/01_Common_Func/src/*.c
                    main.c
                    -o
                    main.exe
                    &&
                    $dirmain.exe
                )
        */
    }
}
